            "email": "guillem@nemeurope.eu"
        },
        {
            "name": "David",
            "email": "david@nem.foundation"
        }
    ],
    "bugs": "https://github.com/nemtech/nem2-cli/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/nemtech/nem2-cli.git"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "@types/cli-spinner": "^0.2.0",
        "@types/node": "^9.6.55",
        "@types/readline-sync": "^1.4.3",
        "chalk": "^2.3.0",
        "cli-spinner": "^0.2.7",
        "cli-table3": "^0.5.1",
        "clime": "^0.5.9",
        "nem2-sdk": "^0.16.1",
        "path": "^0.12.7",
        "readline-sync": "^1.4.9",
        "rxjs": "^6.5.3"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/mocha": "^2.2.44",
        "chai": "^4.1.2",
        "coveralls": "^3.0.0",
        "mocha": "^4.0.1",
        "nodemon": "^2.0.2",
        "nyc": "^11.3.0",
        "ts-mockito": "^2.2.8",
        "ts-node": "^5.0.1",
        "tslint": "^5.8.0",
        "typescript": "^3.7.2"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ]
    }
