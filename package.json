{
    "name": "symbol-cli",
    "version": "0.18.5",
    "description": "Command Line Interface (CLI) to interact with Symbol",
    "main": "index.js",
    "scripts": {
        "pretest": "npm run build",
        "test": "mocha --ui bdd --recursive ./build/test",
        "build": "rm -rf build/ && tsc",
        "build:win": "del build && tsc",
        "dev": "nodemon --config \"./nodemon-config.json\"/",
        "test:cov": "nyc --reporter=lcov --reporter=text-summary npm t",
        "test:coveralls": "npm run test:cov | coveralls",
        "coveralls-report": "cat ./coverage/lcov.info | coveralls",
        "lint:all": "eslint src/ --ext .ts && eslint test/ --ext .ts",
        "lint:all:fix": "eslint src/ --ext .ts --fix && eslint test/ --ext .ts --fix",
        "version": "echo $npm_package_version"
    },
    "bin": {
        "symbol-cli": "./bin/symbol-cli"
    },
    "bugs": "https://github.com/nemtech/symbol-cli/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/nemtech/symbol-cli.git"
    },
    "license": "Apache-2.0",
    "dependencies": {
        "axios": "^0.19.2",
        "chalk": "^2.3.0",
        "cli-spinner": "^0.2.7",
        "cli-table3": "^0.5.1",
        "clime": "^0.5.9",
        "path": "^0.12.7",
        "prompts": "^2.1.0",
        "rxjs": "^6.5.3",
        "symbol-sdk": "^0.17.3",
        "symbol-uri-scheme": "^0.4.3",
        "update-notifier": "^4.1.0"
    },
    "devDependencies": {
        "@types/chai": "^4.0.4",
        "@types/cli-spinner": "^0.2.0",
        "@types/mocha": "^2.2.44",
        "@types/node": "^9.6.55",
        "@types/prompts": "^2.0.3",
        "@types/proxyquire": "^1.3.28",
        "@types/sinon": "^7.5.2",
        "@types/update-notifier": "^4.1.0",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "chai": "^4.1.2",
        "coveralls": "^3.0.9",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-prefer-arrow": "^1.1.7",
        "eslint": "^6.8.0",
        "mocha": "^4.0.1",
        "nodemon": "^2.0.2",
        "nyc": "^15.0.0",
        "proxyquire": "^2.1.3",
        "sinon": "^9.0.1",
        "ts-mockito": "^2.2.8",
        "ts-node": "^5.0.1",
        "typescript": "^3.8.3"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js"
        ]
    }
}
